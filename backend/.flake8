[flake8]
max-line-length = 100
extend-ignore =
    E203,
    W503,
    E501,
    E401,
    E402,
    D100,
    D101,
    D102,
    D103,
    D104,
    D107,
    D205,
    D212,
    D415,
    D202,
    C901,
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    chroma_db,
    frontend,
    .pytest_cache,
    .eggs,
    *.egg
max-complexity = 10
docstring-convention = google
per-file-ignores =
    __init__.py:F401
    tests/*:D100,D101,D102,D103,D104,F401,F841
    ai_generator.py:F401
    app.py:F401,F811
    models.py:F401
    rag_system.py:F401
    search_tools.py:F401
    vector_store.py:F401
    document_processor.py:B007,C901
